<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tvDay"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Ngay gio thang nam"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/ivTitleName"
        app:layout_constraintTop_toBottomOf="@id/tvDay"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <TextView
        android:textSize="16dp"
        android:id="@+id/tvTitle"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvDay"
        app:layout_constraintStart_toEndOf="@id/ivTitleName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvText"
        android:background="@drawable/custom_background_edittext_message"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toEndOf="@id/ivTitleName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="20dp"
        android:text="AM 7:26"
        android:id="@+id/tvHour"
        app:layout_constraintStart_toEndOf="@id/tvText"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
